<button id="ajax-dice-value">
  Roll again
</button>
<div class="ajax-dice-roll">{{ roll }}</div>
<div class="ajax-dice-die">
  <svg class="ajax-dice" viewBox="0 0 200 200" version="1.1" xmlns="http://www.w3.org/2000/svg">
  <rect x="3" y="3" width="194" height="194" />
  {% if roll == 1 %}
    <circle cx="100" cy="100" r="15" />
  {% elseif roll == 2 %}
    <circle cx="70" cy="70" r="15"  />
    <circle cx="130" cy="130" r="15"  />
  {% elseif roll == 3 %}
    <circle cx="50" cy="50" r="15" />
    <circle cx="100" cy="100" r="15" />
    <circle cx="150" cy="150" r="15" />
  {% elseif roll == 4 %}
    <circle cx="50" cy="50" r="15" />
    <circle cx="150" cy="50" r="15" />
    <circle cx="50" cy="150" r="15" />
    <circle cx="150" cy="150" r="15" />
  {% elseif roll == 5 %}
    <circle cx="50" cy="50" r="15" />
    <circle cx="150" cy="50" r="15" />
    <circle cx="100" cy="100" r="15" />
    <circle cx="50" cy="150" r="15" />
    <circle cx="150" cy="150" r="15" />
  {% else %}
    <circle cx="50" cy="50" r="15" />
    <circle cx="50" cy="100" r="15" />
    <circle cx="50" cy="150" r="15" />
    <circle cx="150" cy="50" r="15" />
    <circle cx="150" cy="100" r="15" />
    <circle cx="150" cy="150" r="15" />
  {% endif %}
  </svg>
</div>
